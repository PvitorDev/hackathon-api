{
  "openapi": "3.0.3",
  "info": {
    "title": "API Hackathon - Orange Evolution 1.0",
    "description": "\nAPI desenvolvida no hackathon da FCAMARA em conjunto com Orange Juice",
    "version": "1.0.11"
  },
  "externalDocs": {
    "description": "Download Collection Insomnia",
    "url": "https://drive.google.com/file/d/1TSNpepKIrvnap9F7nnWAnXqJTIjImdXc/view?usp=sharing"
  },
  "servers": [
    {
      "url": "https://fcamara-api.herokuapp.com/"
    }
  ],
  "tags": [
    {
      "name": "Usuario"
    },
    {
      "name": "Conteudos"
    },
    {
      "name": "Postagens"
    },
    {
      "name": "Comentários"
    },
    {
      "name": "Favoritar"
    },
    {
      "name": "Youtube"
    }
  ],
  "paths": {
    "/cadastro": {
      "post": {
        "tags": [
          "Usuario"
        ],
        "summary": "Cadastrar Usuario.",
        "responses": {
          "201": {
            "description": "Cadastro de usuarios",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nome": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "senha": {
                      "type": "string"
                    },
                    "trilha": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Usuario"
        ],
        "summary": "Login usuario.",
        "responses": {
          "201": {
            "description": "Login de usuarios",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "senha": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/usuario": {
      "put": {
        "tags": [
          "Usuario"
        ],
        "summary": "Atualização do usuario. (Auth)",
        "responses": {
          "204": {
            "description": "Atualização do usuario",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "nome": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "senha": {
                      "type": "string"
                    },
                    "trilha": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/usuario/perfil/{id}": {
      "put": {
        "tags": [
          "Usuario"
        ],
        "summary": "Atualizar um usuario como administrador. (Auth)",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "Id do usuario"
          }
        ],
        "responses": {
          "204": {
            "description": "Atualização do usuario para administrador (Apenas administradores)"
          }
        }
      }
    },
    "/usuario/perfil/{idUser}": {
      "delete": {
        "tags": [
          "Usuario"
        ],
        "summary": "Deletar Usuario ou conta (Auth)",
        "parameters": [
          {
            "in": "path",
            "name": "idUser",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "Deletar sua prória conta ou caso seja adminsitrador deletar contas de outros usuarios"
          }
        ],
        "responses": {
          "204": {
            "description": "Atualização do usuario para administrador"
          }
        }
      }
    },
    "/postagem/conteudos": {
      "get": {
        "tags": [
          "Conteudos"
        ],
        "summary": "Retorna todos os conteudos (&page=numero_paginas).",
        "responses": {
          "200": {
            "description": "Retornar todos os conteudos"
          }
        }
      }
    },
    "/postagem/conteudos?id_usuario={id}": {
      "get": {
        "tags": [
          "Conteudos"
        ],
        "summary": "Retorna todos os conteudos de um usuario (&page=numero_paginas)",
        "parameters": [
          {
            "in": "query",
            "name": "id_usuario",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "The number of items to skip before starting to collect the result set"
          },
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "The numbers of items to return"
          }
        ],
        "responses": {
          "200": {
            "description": "Retornar todos os conteudos"
          }
        }
      }
    }
  }
}